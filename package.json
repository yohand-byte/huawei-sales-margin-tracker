{
  "name": "sales-margin-tracker",
  "private": true,
  "version": "0.0.1",
  "description": "Local-first sales margin tracker for Huawei solar products (with Supabase sync + internal chat).",
  "author": "Qualiwatt",
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/generateCatalogJson.mjs",
    "build": "tsc -b && vite build",
    "build:ios:web": "VITE_BASE_PATH=/ npm run build",
    "desktop:dev": "concurrently -k -n VITE,ELECTRON -c blue,green \"VITE_BASE_PATH=/ vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron ./electron/main.mjs\"",
    "desktop:build": "electron-builder --mac --publish never",
    "test": "vitest run",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "ios:add": "npx cap add ios",
    "ios:sync": "npm run build:ios:web && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:doctor": "npx cap doctor",
    "sync:ingest-email": "node scripts/platform-sync/ingest-email.mjs",
    "sync:ingest-stripe-event": "node scripts/platform-sync/ingest-stripe-event.mjs",
    "sync:poll-imap": "node scripts/platform-sync/poll-imap.mjs",
    "sync:worker": "node scripts/platform-sync/run-worker.mjs",
    "sync:playwright-fetch-order": "node scripts/platform-sync/playwright-fetch-order.mjs",
    "sync:playwright-capture-state": "node scripts/platform-sync/playwright-capture-state.mjs"
  },
  "dependencies": {
    "@capacitor/core": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "@supabase/supabase-js": "^2.95.3",
    "imapflow": "^1.1.1",
    "mailparser": "^3.9.0",
    "playwright-core": "^1.55.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.1.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.qualiwatt.huawei-sales-manager",
    "productName": "Huawei Sales Manager",
    "files": [
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "dist-desktop",
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
