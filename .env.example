VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
VITE_SUPABASE_TABLE=sales_margin_state
# Mets une valeur longue et difficile a deviner pour isoler ton instance.
VITE_SUPABASE_STORE_ID=huawei-sales-margin-tracker-prod-CHANGE-ME

# Backend ingestion (scripts/platform-sync/*)
# Ne jamais exposer la service role key dans le frontend.
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
SUPABASE_STORE_ID=huawei-sales-margin-tracker-prod-CHANGE-ME

# IMAP trigger (Lot 2)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=YOUR_EMAIL
IMAP_PASSWORD=YOUR_APP_PASSWORD
IMAP_MAILBOX=INBOX
IMAP_LOOKBACK_DAYS=7
IMAP_MAX_MESSAGES=25
IMAP_ONLY_UNSEEN=true
IMAP_MARK_SEEN=true
IMAP_ALLOWED_SENDER_DOMAINS=sun.store,solartraders.com
SYNC_POLL_INTERVAL_SECONDS=300
SYNC_RUN_ONCE=false

# Playwright targeted scrape (Lot 3)
PLAYWRIGHT_AUTO_SCRAPE=false
PLAYWRIGHT_EXECUTABLE_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
PLAYWRIGHT_STATE_PATH=/ABSOLUTE/PATH/playwright-state.json
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_LOGIN_URL=https://sun.store/en/sign-in
SUNSTORE_PANEL_MAX_PAGES=10
SUNSTORE_NEGOTIATION_URL_TEMPLATE=https://sun.store/en/seller/negotiations/{id}
SOLARTRADERS_NEGOTIATION_URL_TEMPLATE=https://app.solartraders.com/negotiations/{id}
